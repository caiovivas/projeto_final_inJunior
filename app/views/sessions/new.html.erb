<% provide(:title, "Log in") %>

<%= render "layouts/header.html.erb" %>
<%= stylesheet_link_tag 'estilo', media: 'all', 'data-turbolinks-track' => true %>

<div class="row" id="log">
  <div class="col-md-6 col-md-offset-3" id="formulario_login">
    <fieldset class="id_fieldset">
      <legend><h2> Login </h2></legend>
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.text_field :matricula, class: 'form-control id_login', placeholder: 'Matricula' %><br>

        <%= f.password_field :senha, class: 'form-control id_password', placeholder: 'Senha' %><br>


        <%= f.submit "Log in", class: "btn btn-primary botEnviar" %>
    <% end %>
    <p>Novo usu√°rio? <%= link_to "Cadastre-se agora!", signup_path %></p>
    </fieldset>
  </div>
</div>