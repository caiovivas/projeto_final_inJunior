<% if logged_in? %>
    //layout
    <%= render "layouts/header.html.erb" %>
    <%= stylesheet_link_tag 'estiloLogin', media: 'all', 'data-turbolinks-track' => true %>


    <% if @current_user.nivel_conta == 1 %>
      <%= @user.nome %>, <%= @user.email %>,<br>Matricula: <%= @user.matricula %>
    <% end %>
    <%= link_to "Sair", logout_path, method: "delete" %>
<% else %>
    <% redirect_to sessions_new_path %>
<% end %>