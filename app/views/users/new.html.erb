<% provide(:title, 'Cadastro') %>

<%= render "layouts/header.html.erb" %>
<%= stylesheet_link_tag 'estilo', media: 'all', 'data-turbolinks-track' => true %>


<div class="row" id="log">
  <div class="col-md-6 col-md-offset-3">
    <fieldset class="id_fieldset">
      <legend><h2> Cadastro </h2></legend>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.text_field :nome, class: 'form-control id_login', placeholder: 'Nome' %><br>

        <%= f.text_field :cpf, class: 'form-control id_login', placeholder: 'CPF' %><br>

        <%= f.text_field :matricula, class: 'form-control id_login', placeholder: 'MatrÃ­cula' %><br>

        <%= f.email_field :email, class: 'form-control id_login', placeholder: 'E-mail' %><br>

        <%= f.password_field :password, class: 'form-control id_login', placeholder: 'Senha' %><br>

        <%= f.password_field :password_confirmation, class: 'form-control id_login', placeholder: 'Confirme a senha' %><br>

        <%= f.submit "Criar conta", class: "btn btn-primary botEnviar" %>
    <% end %>
    </fieldset>
  </div>
</div>

