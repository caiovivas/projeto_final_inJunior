<% provide(:title, "Pedido de Material") %>

<%= render "layouts/header.html.erb" %>
<%= stylesheet_link_tag 'estilo', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'pedidodemateriais', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'jquery-2.2.3', 'data-turbolinks-track' => true %>

<div class="row" id="log">
  <div class="col-md-6 col-md-offset-3" id="formulario_login">
    <fieldset class="id_fieldset" >
      <legend ><h2> Pedido de Material </h2></legend>
      <form >
        <% TipoMaterial.all.each do |p| %>
            <td><%= p.nome %></td>

        <% end %>
        <p>Local do uso:<input type="text" size="18" placeholder="ex: sala 321" required></input></p>
      </form>
    </fieldset>

  </div>
  <form id="adc">
    <input id="adicionar" type="submit" value="Adicionar mais materiais"></input>
  </form>
  <input type="submit" value="Concluir pedido"></input>
</div>